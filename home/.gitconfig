[push]
  default = simple
[help]
  autocorrect = 1
[color]
  ui = auto
[alias]
  co = checkout
  sigs = log --show-signature
  st = status
  ca = commit --amend
  aa = add --all
  dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
[include]
  path = .gitconfig.local
[pull]
  rebase = true
